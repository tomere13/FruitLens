{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts", // Include TypeScript files
    "**/*.tsx", // Include TypeScript files with JSX
    "**/*.js", // Optionally include JavaScript files
    "**/*.jsx", // Optionally include JavaScript files with JSX
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}